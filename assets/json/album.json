---
---

[
    {% assign pic_list = site.static_files
        | where_exp:"file", "file.path contains 'travel'"
        | where_exp:"file", "file.name contains 'pic'"
        | compact
    %}
    {%- for pic in pic_list -%}
        {% assign post = site.posts | where_exp:"post", "post.content contains pic.path" | first %}
    {
        "path": "{{ pic.path }}",
        "url": "{{ post.url }}",
        "info": "{{ post.title }}<br>{{ post.date | date:"%Y.%m.%d" }}"
    }{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
    ,
    {% assign pic_list = site.static_files
        | where_exp:"file", "file.path contains 'days-in-japan'"
        | compact
    %}
    {%- for pic in pic_list -%}
        {% assign page = site.pages | where_exp:"page", "page.content contains pic.path" | first %}
        {% assign title = page.name | split:"." | first %}
    {
        "path": "{{ pic.path }}",
        "url": "{{ page.url }}",
        "info": "{{ title }}<br>{{ pic.name | split:"-" | slice:0,2 | join:"." }}"
    }{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
]
