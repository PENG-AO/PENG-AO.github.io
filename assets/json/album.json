---
---

[
    {% assign pic_list = site.static_files
        | where_exp:"file", "file.name contains 'pic'"
        | where_exp:"file", "file.path contains 'travel'"
        | compact
    %}
    {%- for pic in pic_list -%}
        {% assign name = pic.path | split:"/" | slice:3 | first %}
        {% assign post = site.posts | where_exp:"post", "post.url contains name" | first %}
    {
        "path": "{{ pic.path }}",
        "url": "{{ post.url }}",
        "info": "{{ post.title }}<br>{{ post.date | date:"%Y.%m.%d" }}"
    }{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
    ,
    {% assign pic_list = site.static_files
        | where_exp:"file", "file.path contains 'days-in-japan'"
        | compact
    %}
    {%- for pic in pic_list -%}
        {% assign page = site.pages | where_exp:"page", "page.content contains pic.path" | first %}
    {
        "path": "{{ pic.path }}",
        "url": "{{ page.url }}",
        "info": "{{ page.title }}<br>{{ pic.basename | truncate:7, '' | replace:'-', '.' }}"
    }{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
]
